{
  "name": "healthcare-backend",
  "version": "1.0.0",
  "description": "Backend for healthcare management system",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:prod": "set NODE_ENV=production&& node server.js",
    "build:frontend": "npm --prefix ..\\frontend run build",
    "build:all": "npm --prefix ..\\frontend ci && npm --prefix ..\\frontend run build && npm ci",
    "serve:prod": "npm run build:frontend && npm run start:prod"
  },
  "keywords": [
    "healthcare",
    "backend",
    "api",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.14",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
